pkgname=dc
pkgver=0
pkgrel=1
pkgdesc="Desk Calculator"
arch=('x86_64')
url="http://openbsd.org"
license=('BSD')
groups=() 
makedepends=('bmake' 'libbsd' 'openssl')
source=($pkgname.tar.gz)

build() {
  cd $srcdir/$pkgname
  test -z $CC && export CC=cc
  bmake CC=$CC CFLAGS="$CFLAGS -D__dead=" LDFLAGS="$LDFLAGS" LDADD='-lbsd -lcrypto'
}

package() {
  export DESTDIR=$pkgdir
  export BINDIR=/bin
  export MANDIR=/usr/share/man
  cd $srcdir/$pkgname
  bmake install
}

sha1sums=('96644244f17660054f2ed1a4eaeeb663f69f161a')
