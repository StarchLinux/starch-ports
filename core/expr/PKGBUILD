pkgname=expr
pkgver=0
pkgrel=1
pkgdesc="Expression Evaluator"
arch=('x86_64')
url="http://openbsd.org"
license=('BSD')
groups=('base') 
makedepends=('bmake' 'libbsd')
source=($pkgname.tar.gz)

build() {
  cd $srcdir/$pkgname
  test -z $CC && export CC=cc
  bmake CC=$CC CFLAGS="$CFLAGS -DREG_BASIC=0" LDFLAGS="$LDFLAGS" LDADD='-lbsd'
}

package() {
  export DESTDIR=$pkgdir
  export BINDIR=/bin
  export MANDIR=/usr/share/man
  cd $srcdir/$pkgname
  bmake install
}

sha1sums=('5c96b75d63423d439602936a9ed0cfd1191c7e21')
