pkgname=tr
pkgver=0
pkgrel=1
pkgdesc="tr utility"
arch=('x86_64')
url="http://openbsd.org"
license=('BSD')
groups=('base') 
makedepends=('bmake' 'libbsd')
source=($pkgname.tar.gz)

build() {
  cd $srcdir/$pkgname
  test -z $CC && export CC=cc
  bmake CC=$CC CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" LDADD='-lbsd'
}

package() {
  export DESTDIR=$pkgdir
  export BINDIR=/bin
  export MANDIR=/usr/share/man
  cd $srcdir/$pkgname
  bmake install
}

sha1sums=('3c942bbaf024259ad6fb4f52bd13b4307ba1a868')
