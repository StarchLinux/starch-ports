pkgname=sed
pkgver=0
pkgrel=1
pkgdesc="Stream Editor"
arch=('x86_64')
url="http://openbsd.org"
license=('BSD')
groups=('base') 
makedepends=('bmake' 'libbsd')
source=($pkgname.tar.gz)

build() {
  cd $srcdir/$pkgname
  test -z $CC && export CC=cc
  bmake CC=$CC CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" LDADD='-lbsd'
}

package() {
  export DESTDIR=$pkgdir
  export BINDIR=/bin
  export MANDIR=/usr/share/man
  cd $srcdir/$pkgname
  bmake install
}

sha1sums=('5f7bd5c9adc7c98a658a04008dd03ec3ea4c8931')
